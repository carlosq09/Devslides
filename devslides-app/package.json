    "test:debug": "mocha debug  '**/*.spec.js'",
    "test:coverage": "nyc --reporter=text --reporter=html mocha '**/*.spec.js' --runInBand --require mock-local-storage --timeout 30000"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
