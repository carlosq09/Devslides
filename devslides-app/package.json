  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.19",
    "@fortawesome/free-regular-svg-icons": "^5.9.0",
    "@fortawesome/react-fontawesome": "^0.1.4",
    "@glidejs/glide": "^3.3.0",
    "bulma": "^0.7.5",
    "bulma-divider": "^0.2.0",
    "node-sass": "^4.12.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-responsive-carousel": "^3.1.49",
    "react-router-dom": "^5.0.0",
    "react-scripts": "3.0.1",
    "react-spring": "^8.0.23",
    "tippy.js": "^4.3.4",
    "wowjs": "^1.1.3"
  },
  "devDependencies": {
    "bcrypt": "^3.0.6",
    "chai": "^4.2.0",
    "devslides-data": "file:../devslides-data",
    "mocha": "^6.1.4",
    "mock-local-storage": "^1.1.8",
